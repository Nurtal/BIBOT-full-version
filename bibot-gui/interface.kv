<Screen1App>:
    BoxLayout:
        canvas:
            Color:
                rgb: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size

        orientation: "vertical"
        Image:
            source: 'images/bibot_logo.png'
            keep_ratio: True
            allow_stretch: True
            opacity: 1
            pos_hint: {'center_x': 0.5, 'center_y': 0.8}


        BoxLayout:
            spacing: 150
            padding: 40
            orientation: "horizontal"
            Button:
                text: "Analyser"
                size_hint_y: .4
                on_press: root.switch_to_analyser()

            Button:
                text: "Search"
                size_hint_y: .4
                on_press: root.switch_to_search()


<Screen2App>:
    BoxLayout:
        canvas:
            Color:
                rgb: 1, 1, 1, 1
            Rectangle:
                pos: self.pos
                size: self.size


        BoxLayout:
            spacing: 150
            padding: 40
            orientation: "horizontal"
            Button:
                text: "Collect"
                size_hint_y: .25
                on_press: root.collect_info()
            Button:
                text: "Analyse"
                size_hint_y: .25
                on_press: root.create_figures()



